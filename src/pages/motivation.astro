        `<div class="proverb">🕊️ You must be the change you wish to see in the world. 🕊️</div><div class="source">Mahatma Gandhi</div>`,
        `<div class="proverb">🌻 I am not what happened to me, I am what I choose to become. 🌻</div><div class="source">Carl Jung</div>`,
        `<div class="proverb">🌍 Don't cry because it's over, smile because it happened. 🌍</div><div class="source">Dr. Seuss</div>`,
      ];

      function showRandomText(arraytoshow) {
        const randomIndex = Math.floor(
          Math.random() * window.arraytoshow.length
        );
        const randomText = window.arraytoshow[randomIndex];
        document.getElementById("randomText").innerHTML = randomText;
      }

      function showProverbs() {
        window.arraytoshow = proverbsArray;
        showRandomText(window.arraytoshow);
        document.getElementById("aff").classList.remove("active");
        document.getElementById("foc").classList.remove("active");
        document.getElementById("prov").classList.add("active");
      }
      function showAffirmations() {
        window.arraytoshow = affirmations;
        showRandomText(window.arraytoshow);
        document.getElementById("prov").classList.remove("active");
        document.getElementById("foc").classList.remove("active");
        document.getElementById("aff").classList.add("active");
      }
      function showFocus() {
        window.arraytoshow = focusArray;
        showRandomText(window.arraytoshow);
        document.getElementById("prov").classList.remove("active");
        document.getElementById("aff").classList.remove("active");
        document.getElementById("foc").classList.add("active");
      }

      setInterval(showRandomText, 11000);
      window.arraytoshow = focusArray;
      showRandomText(window.arraytoshow);

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("aff")
          .addEventListener("click", showAffirmations);
        document.getElementById("prov").addEventListener("click", showProverbs);
        document.getElementById("foc").addEventListener("click", showFocus);
      });
    </script>
  </body>
