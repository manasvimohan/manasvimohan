---
export interface Props {
  heroImage?: string;
  title: string;
  pubDate: string;
  updatedDate?: string;
  author: string;
}

import FormattedDate from "./FormattedDate.astro";

const {heroImage, title, pubDate, updatedDate, author} = Astro.props;
---

<div class="intro" style={`background-image: url(${heroImage});`}>
  <div class="overlay">
    <div class="prose">
      <div class="title">
        <h1>{title}</h1>
        <div class="date">
          <FormattedDate date={pubDate} />
          {
            updatedDate && (
              <div class="last-updated-on">
                Last updated on <FormattedDate date={updatedDate} />
              </div>
            )
          }
          <div>by {author}</div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .intro {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 30vh; /* Adjust as needed */
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    margin-bottom: 1em;
  }

  .overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5); /* Dark overlay for contrast */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .prose {
    color: white;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    padding: 1em;
    max-width: 90%;
  }

  .title h1 {
    margin: 0 0 0.5em 0;
    font-size: 2em;
    color: white;
  }

  .date {
    font-size: 1rem;
    opacity: 0.9;
  }

  .last-updated-on {
    font-style: italic;
  }
</style>
